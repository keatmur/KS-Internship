<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_middle_margin_small"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addBtn"
            style="@style/AppButton.Dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/replaceBtn"
            style="@style/AppButton.Dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/replace" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/showBtn"
            style="@style/AppButton.Dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayout_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_1">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/removeBtn"
            style="@style/AppButton.Dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remove" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/hideBtn"
            style="@style/AppButton.Dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hide" />

    </androidx.appcompat.widget.LinearLayoutCompat>


    <FrameLayout
        android:id="@+id/fraqment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_2"/>

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout" />
</androidx.constraintlayout.widget.ConstraintLayout>