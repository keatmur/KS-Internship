<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lineLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_middle_margin_small"
        app:layout_constraintEnd_toStartOf="@+id/fragmet_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BtnTestTab"
            style="@style/AppButton.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_tablayout" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BtnTestFrgManager"
            style="@style/AppButton.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_manager"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <fragment
        android:id="@+id/fragmet_choice"
        android:name="com.example.ks_internship.app.fragment.ChoiceFragment"
        android:layout_width="300dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lineLayout"
        app:layout_constraintStart_toStartOf="parent"/>

    <fragment
        android:id="@+id/fragmet_view"
        android:name="com.example.ks_internship.app.fragment.ViewFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fragmet_choice"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout" />
</androidx.constraintlayout.widget.ConstraintLayout>