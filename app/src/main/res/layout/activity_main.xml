<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <android.inputmethodservice.ExtractEditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/ebitText_marginHorizontal"
        android:layout_marginTop="@dimen/ebitText_marginTop"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:layout_marginHorizontal="@dimen/button_marginHorizontal"
        android:layout_marginTop="@dimen/button_marginTop"/>
</LinearLayout>