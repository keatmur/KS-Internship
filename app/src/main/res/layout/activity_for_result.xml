<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_textView"
        android:layout_centerInParent="true">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/okBtn"
            style="@style/AppButton.Dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/cancelBtn"
            android:layout_toEndOf="@id/cancelBtn"
            android:text="@string/ok" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancelBtn"
            style="@style/AppButton.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_middle_margin"
            android:text="@string/cancel" />
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/result_textView"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="@dimen/default_marginTop"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/title_text_size" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout" />

</RelativeLayout>